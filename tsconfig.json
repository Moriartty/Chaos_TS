{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs":true,
        "esModuleInterop": true,
        "lib": ["es5", "es2015", "dom", "scripthost"],
        "baseUrl": ".",
        "paths": {
            "components/*":["./src/ts/components/*"],
            "config/*":["./src/ts/config/*"],
            "actions/*":["./src/ts/actions/*"],
            "utils/*":["./src/ts/utils/*"],
            "appStore":["./src/ts/store.ts"],
            "img/*":["./src/img/*"],
            "less/*":["./src/less/*"],
            "pages/*":["./src/ts/pages/*"],
            "customInterface":["./src/ts/interface.ts"]
        } 
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./src/index.html"
    ]
}